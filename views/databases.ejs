<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Databases | MongoDB Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <a href="/" class="logo">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
      </svg>
      MongoDB Dashboard
    </a>
    <nav class="nav">
      <span class="nav-current">Databases</span>
    </nav>
    <div class="header-actions">
      <button id="disconnectBtn" class="btn btn-sm btn-ghost" title="Disconnect">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4M16 17l5-5-5-5M21 12H9"/>
        </svg>
      </button>
    </div>
  </header>
  
  <main class="main">
    <div class="databases-page">
      <div class="page-header">
        <h1>Select a Database</h1>
        <p class="page-subtitle"><%= databases.length %> database<%= databases.length !== 1 ? 's' : '' %> available</p>
      </div>
      
      <div class="database-grid">
        <% databases.forEach(function(db) { %>
          <a href="/browse/<%= db.name %>" class="database-card">
            <div class="database-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <ellipse cx="12" cy="5" rx="9" ry="3"/>
                <path d="M21 12c0 1.66-4.03 3-9 3s-9-1.34-9-3"/>
                <path d="M3 5v14c0 1.66 4.03 3 9 3s9-1.34 9-3V5"/>
              </svg>
            </div>
            <div class="database-info">
              <h3 class="database-name"><%= db.name %></h3>
              <span class="database-size" data-bytes="<%= db.sizeOnDisk %>"><%= db.sizeOnDisk %></span>
            </div>
            <svg class="database-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </a>
        <% }); %>
      </div>
    </div>
  </main>

  <script src="/js/app.js"></script>
  <script>
    // Format byte sizes
    document.querySelectorAll('.database-size').forEach(el => {
      const bytes = parseInt(el.dataset.bytes);
      if (!isNaN(bytes)) {
        el.textContent = formatBytes(bytes);
      }
    });
  </script>
</body>
</html>
